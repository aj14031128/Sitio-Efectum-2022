<div class="container" style:"margin-top:50px;">
    <div class="row">
        <p class="text-end"> Hola {{usuario}} <a class="btn btn-danger" 
        href="/admin/login/logout">Cerrar sesion <i
            class="fas fa-sign-out-alt"> </i></a></p>
    </div>
{{!Fila 2 - Primer fila de las novedades}}
    <div>
    <div class="row">
         <div class="col-7">
             <h2>Listado de Novedades</h2>
         </div>
         <div class="col-5 text-end">
             <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
         </div>
    </div>

 {{!Fila 3 - Tabla de novedades}}
    <div class="row">
         <div class="col">
                <table class="table">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col">#</th>
                            <th scope="col">Título</th>
                            <th scope="col">Subtítulo</th>
                            <th scope="col">Imagen</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                        <tbody>
                            
                            {{#each novedades}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td scope="row">{{titulo}}</td>
                                <td scope="row">{{subtitulo}}</td>
                                <td scope="row">{{{imagen}}}</td>
                                <td class="text-end">
                                    <a class="btn btn-secundary" href="/admin/novedades/modificar/{{id}}"><i class="fas fa-pencil-alt"></i></a>
                                    <a class="btn btn-secundary" href="/admin/novedades/eliminar/{{id}}"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                </table>

</div>

